; Currently included Themes: "Default", "CatppuccinMocha", "CatppuccinFrappe", "CatppuccinMacchiato", "CatppuccinLatte"
Theme=Default
; Scale of all widgets
Scale=1.0

; Border color for all widgets
BorderColor=41,44,60
; Border size for all widgets
BorderWidth=1

; Font to use for regular text
TextFont=RobotoMono Nerd Font Propo
; Font to use for icons, can be any nerd font as long as it's "Propo"
NerdFont=RobotoMono Nerd Font Propo
; Font Weight for most text
FontWeightMain=600
; Font Weight for not-as-important text or subheaders
FontWeightSub=500

; Outer corner radius for all widgets, set to 8 to match the default Windows 11 style or 0 for sharp corners
CornerRadiusOutside=8
; Inner corner radius for all widgets, set to 6 to match the default Windows 11 style or 0 for sharp corners
CornerRadiusInside=6

; Setting this to "true" will disable the default rainmeter context menu for all widgets, make it feel more 'native'
DisableContextMenu=false
; Setting this to "true" will open the config file when you middle-click any widget
OpenConfigOnClick=true

; Image to display in the WinFetch widget
; WinFetchLogo=%USERPROFILE%\Pictures\Other\windows.png
; Image to display in the WslFetch widget
; WslFetchLogo=%USERPROFILE%\Pictures\Other\linux.png

; Path to the ShareX executable, used for screenshot-buttons
ShareXPath=C:\Program Files\ShareX\ShareX.exe
; The path to the ShareX folder, used for displaying the latest screenshot
ScreenshotsFolder=%USERPROFILE%\Pictures

; decreasing this number will reduce cpu usage
VisualizerFrequencyResolution=1024
; increasing this will make the visualizer more sensitive
VisualizerSensitivity=35.0

; See https://docs.rainmeter.net/tips/hwinfo/ on how to set this up
CpuTempIndex=2
CpuUsageIndex=1
GpuTempIndex=6
GpuUsageIndex=7
DiskTempIndex=4
DiskUsageIndex=5
MemoryTempIndex=3
MemoryUsageIndex=0

; See Method Two in https://docs.rainmeter.net/tips/animated-gif-files/ on how to set this up
; Gif1BitMap="%USERPROFILE%\Pictures\wave.png"
; Gif1FrameCount=222
; Gif1RefreshRate=60

; Should be self-explanatory, set the color, icon and command for each shortcut
; Shortcut1Icon="%USERPROFILE%\Pictures\explorer.png"
; Shortcut1Color=#Accent1#
; Shortcut1Command="explorer.exe"

